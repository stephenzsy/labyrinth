extends ../layout

block scripts
    link(rel="stylesheet" href="/stylesheets/admin/bootstrap.css")
    script(type="text/javascript" src="/javascripts/admin/packages.js")
    script(type="text/javascript" src="/javascripts/admin/bootstrap.js")

block content
    div(ng-controller="adminBootstrapController as bootstrap")
        div
            ol.breadcrumb
                li
                    a(href="/") Home
                li Admin
                li.active Bootstrap
        div.page-header
            h1 Bootstrap
        div
            h2 Packages
            div(ng-repeat="p in packages")
                h3 {{p.config.name}}
                table.table
                    thead
                        tr
                            th Version
                            th Date
                            th Status
                            th Actions
                    tbody
                        tr(ng-repeat="v in p.versions")
                            td(ng-class="{'bg-primary': (p.bootstrapVersion === v.version)}") {{v.version}}
                            td {{v.date}}
                            td
                                span.text-success(ng-show="v.status === 'Available'") Available
                                span.text-warning(ng-show="v.status === 'NotFound'") Not Found
                            td
                                a.btn.btn-link(ng-show="v.status === 'Available'" ng-click="selectBootstrapVersion(p, v)") Bootstrap
        div
            h2 Servers

